<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp">

        <!-- Heading instead of button -->
        <TextView
            android:id="@+id/text_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select your play:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerPlayFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />


        <View
            android:id="@+id/separator_line"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#808080"
            android:layout_marginStart="0sp"
            android:layout_marginTop="10sp"
            android:text="@string/font_size_setting_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerPlayFilter"/>

        <TextView
            android:id="@+id/play_selected_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@+id/separator_line"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"/>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonsLayoutAtBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20sp">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:onClick="returnToMain"
            android:text="@string/nav_btn_label_return_to_home"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:onClick="goBack"
            android:text="@string/nav_btn_label_back"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:onClick="refreshScreen"
            android:text="@string/btnRefresh"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>