<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleX="1"
    android:scaleY="1"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/buttonsTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/btnUserSettings"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:contentDescription="Settings"
        android:onClick="launchUserInfoScreen"
        android:text="@string/txt_aboutyou_button"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSound"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_margin="8sp"
            android:contentDescription="ToggleSoundOnOff"
            android:onClick="toggleSoundOnOff"
            android:text="@string/txt_sound_on_off_button"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/txtSoundOnOffIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Sound on/off"
            app:layout_constraintStart_toEndOf="@+id/btnSound" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:scaleX="3"
        android:scaleY="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonsTop"
        app:srcCompat="@mipmap/home_on_stage" />

    <TextView
        android:id="@+id/txtTitleSelectGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:text="@string/txt_genrefilter"
        android:textSize="@dimen/home_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RadioGroup
        android:id="@+id/rabtngGenreSelector"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleSelectGenre">

        <RadioButton
            android:id="@+id/rabtnAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="filterPlaysList"
            android:text="All"
            android:textSize="@dimen/home_font_size" />

        <RadioButton
            android:id="@+id/rabtnHistories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="filterPlaysList"
            android:text="Histories"
            android:textSize="@dimen/home_font_size" />

        <RadioButton
            android:id="@+id/rabtnTragedies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="filterPlaysList"
            android:text="Tragedies"
            android:textSize="@dimen/home_font_size" />

        <RadioButton
            android:id="@+id/rabtnComedies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="filterPlaysList"
            android:text="Comedies"
            android:textSize="@dimen/home_font_size" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/playSelectorLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="1sp"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rabtngGenreSelector"
        app:layout_constraintBottom_toTopOf="@+id/buttonsBank">

        <!-- Spinner Element to select play with the list filtered by the above radio buttons-->
        <Spinner
            android:id="@+id/spinnerPlaysList"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:hint="List of all Shakespeare plays to select from"
            android:padding="8sp"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textIsSelectable="true"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@+id/playSelectorLL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnOpenBookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:layout_marginStart="0sp"
            android:background="@drawable/bookmark_icon_white_on_black"
            android:contentDescription="Bookmarks"
            android:onClick="openBookmarks" />

        <Button
            android:id="@+id/btnOpenThePlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:layout_marginStart="0sp"
            android:onClick="openSelectedPlay"
            android:text="Open Play"
            android:textAllCaps="false" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:src="@drawable/settings_cog_white_on_black"
            style="?android:attr/borderlessButtonStyle"
            android:contentDescription="Settings"
            android:onClick="launchSettings" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>