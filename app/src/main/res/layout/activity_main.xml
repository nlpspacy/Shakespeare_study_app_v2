<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleX="1"
    android:scaleY="1"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/buttonsTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnAboutYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Settings"
            android:onClick="launchUserInfoScreen"
            app:srcCompat="@drawable/about_you_transparent_bg" />



        <ImageButton
            android:id="@+id/btnSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="ToggleSoundOnOff"
            android:onClick="toggleSoundOnOff"
            app:srcCompat="@drawable/sound_icon_transparent_bg" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonsTop"
        app:srcCompat="@mipmap/home_on_stage" />

    <TextView
        android:id="@+id/txtTitleSelectGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/txt_genrefilter"
        android:textSize="@dimen/home_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RadioGroup
        android:id="@+id/rabtngGenreSelector"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleSelectGenre">

        <RadioButton
            android:id="@+id/rabtnAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="filterPlaysList"
            android:text="All"
            android:textSize="@dimen/home_font_size" />

        <RadioButton
            android:id="@+id/rabtnHistories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="filterPlaysList"
            android:text="Histories"
            android:textSize="@dimen/home_font_size" />

        <RadioButton
            android:id="@+id/rabtnTragedies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="filterPlaysList"
            android:text="Tragedies"
            android:textSize="@dimen/home_font_size" />

        <RadioButton
            android:id="@+id/rabtnComedies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="filterPlaysList"
            android:text="Comedies"
            android:textSize="@dimen/home_font_size" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/playSelectorLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="1sp"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rabtngGenreSelector"
        app:layout_constraintBottom_toTopOf="@+id/buttonsBank">

        <!-- Spinner Element to select play with the list filtered by the above radio buttons-->
        <Spinner
            android:id="@+id/spinnerPlaysList"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:hint="List of all Shakespeare plays to select from"
            android:padding="8sp"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textIsSelectable="true"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="10sp"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@+id/playSelectorLL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnOpenBookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/bookmark_icon_white_on_black"
            android:contentDescription="Bookmarks"
            android:onClick="openBookmarks" />

        <Button
            android:id="@+id/btnOpenThePlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:onClick="openSelectedPlay"
            android:text="Open Play"
            android:textAllCaps="false" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:src="@drawable/settings_cog_white_on_black"
            style="?android:attr/borderlessButtonStyle"
            android:contentDescription="Settings"
            android:onClick="launchSettings" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:text="Logout" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" >

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Welcome"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textGoogleEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logged in as: "
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display name: "
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>